{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "nix": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update nix flake inputs",
      "datasourceTemplate": "github-tags",
      "managerFilePatterns": [
        "/(^|/)flake\.nix$/"
      ],
      "matchStrings": [
        "\"github:(?<packageName>.*\\\/.*?)\\\/(?<currentValue>.*?)\";\\n"
      ]
    }
  ]
}
